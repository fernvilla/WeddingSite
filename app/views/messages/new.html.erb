<% provide(:title, "Guest Book | New Message") %>

<div class="container guest-book text-center">
  <div class="row">
    <div class="col-sm-12">
      <h1>Sign the Guest Book</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= form_for @message, :html => {class: "form-horizontal"} do |f| %>
        <% if @message.errors.any? %>
          <div id="error_explanation">
            <h4>
              <%= pluralize(@message.errors.count, "error") %> prohibited
              this message from being saved:
            </h4>
              <% @message.errors.full_messages.each do |msg| %>
                <p><%= msg %></p>
              <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_area :message, class: "form-control", rows: 5, placeholder: "Enter your message..."  %>
        </div>

        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Your name"  %>
        </div>

        <div class="form-group">
          <%= f.submit "Post Message", class: "btn btn-default"%>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    &laquo <%= link_to "Go back", messages_path %>
  </div>
</div>